        app:fmb_message_color="#F4B1B2"
        app:fmb_selected_color="#FCE4EC"
        app:fmb_title="企业"
        app:fmb_title_color="#D72822" />

    <com.handsome.menubar.FastMenuBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:fmb_animation_type="fmb_normal"
        app:fmb_arrow="@drawable/fmb_pick_arrow"
        app:fmb_icon="@drawable/icon_business4"
        app:fmb_selected_color="#FCE4EC"
        app:fmb_title="任务"
        app:fmb_title_color="#D72822" />

    <com.handsome.menubar.FastMenuBar
