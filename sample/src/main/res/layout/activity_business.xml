        app:fmb_icon="@drawable/icon_business6"
        app:fmb_selected_color="#FCE4EC"
        app:fmb_title="客户"
        app:fmb_title_color="#D72822" />

    <com.handsome.menubar.FastMenuBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:fmb_animation_type="fmb_normal"
